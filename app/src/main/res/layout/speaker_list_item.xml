<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/speaker_list_item_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            tools:text="Full name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/speaker_list_item_thumbnail"
                android:layout_width="@dimen/speaker_photo_avatar_size"
                android:layout_height="@dimen/speaker_photo_avatar_size"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/speaker_list_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/list_element_margin"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Speaker bio text"/>
        </LinearLayout>

    </LinearLayout>
</layout>
